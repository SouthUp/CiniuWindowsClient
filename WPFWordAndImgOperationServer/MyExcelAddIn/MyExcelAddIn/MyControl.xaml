<UserControl x:Class="MyExcelAddIn.MyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyExcelAddIn"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBox x:Name="InputBox" Width="100" Height="25" VerticalContentAlignment="Center"></TextBox>
            <Button Width="60" Height="25" Click="Button_Click">定位</Button>
        </StackPanel>
    </Grid>
</UserControl>
